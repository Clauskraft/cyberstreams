# Core application
PORT=3001
NODE_ENV=development

# PostgreSQL configuration repository
# Either provide DATABASE_URL or configure the discrete variables below.
# Never use the sample password in production.
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=cyberstreams
POSTGRES_USER=cyberstreams
POSTGRES_PASSWORD=change_me
DATABASE_URL=postgresql://cyberstreams:change_me@postgres:5432/cyberstreams

# MISP integration
MISP_BASE_URL=https://misp.local
MISP_API_KEY=replace-with-misp-api-key
MISP_VERIFY_TLS=true
MYSQL_ROOT_PASSWORD=super-secret-root
MISP_DB_PASSWORD=super-secret-misp

# OpenCTI integration
OPENCTI_API_URL=https://opencti.local:8080
OPENCTI_PUBLIC_URL=https://opencti.example.com
OPENCTI_TOKEN=replace-with-opencti-token
OPENCTI_ADMIN_EMAIL=admin@example.com
OPENCTI_ADMIN_PASSWORD=super-secret-password

# Vector database (Qdrant/Weaviate)
VECTOR_DB_URL=http://qdrant:6333
VECTOR_DB_API_KEY=replace-with-vector-token

# Ingestion pipeline
INGESTION_LOG_LEVEL=info
AUTHORIZED_SOURCES_TABLE=sources
AUTO_SEED_SOURCES=true

# Reverse proxy
TRAEFIK_DOMAIN=cyberstreams.local
TRAEFIK_EMAIL=admin@example.com
