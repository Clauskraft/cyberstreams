{
  "name": "Cyberstreams Development",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bookworm",
  
  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "settings": {
        "typescript.tsdk": "node_modules/typescript/lib",
        "typescript.enablePromptUseWorkspaceTsdk": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": true
        },
        "files.associations": {
          "*.css": "tailwindcss"
        },
        "tailwindCSS.experimental.classRegex": [
          ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
          ["className:\\s*['\"]([^'\"]*)['\"]", "([^'\"]*)"]
        ]
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-typescript-next",
        "eamodio.gitlens",
        "github.copilot",
        "github.copilot-chat",
        "streetsidesoftware.code-spell-checker",
        "usernamehw.errorlens",
        "christian-kohler.path-intellisense",
        "dsznajder.es7-react-js-snippets"
      ]
    }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally
  "forwardPorts": [5173, 3000],

  // Port attributes
  "portsAttributes": {
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Express Server",
      "onAutoForward": "notify"
    }
  },

  // Use 'postCreateCommand' to run commands after the container is created
  "postCreateCommand": "npm install",

  // Use 'postStartCommand' to run commands after the container starts
  "postStartCommand": "echo 'Cyberstreams development environment ready! Run npm run dev to start the development server.'",

  // Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root
  "remoteUser": "node",

  // Features to add to the dev container
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  // Set environment variables
  "containerEnv": {
    "NODE_ENV": "development"
  },

  // Lifecycle scripts
  "onCreateCommand": "echo 'Setting up Cyberstreams development environment...'",
  
  // Mount the workspace
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  // Set the container name
  "name": "cyberstreams-dev"
}
